<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tool="http://schemas.android.com/tools">
	
	<TextView
		android:id="@+id/a_language_codeTV"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="@id/a_language_deleteIB"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/a_language_codeGL"
		android:layout_marginHorizontal="8sp"
		android:layout_marginBottom="8dp"
		tool:text="CD"
		style="@style/TextAppearance.MaterialComponents.Headline5"/>
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/a_language_codeGL"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_begin="72dp"/>
	
	<TextView
		android:id="@+id/a_language_langTV"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="@id/a_language_deleteIB"
		app:layout_constraintLeft_toRightOf="@id/a_language_codeGL"
		app:layout_constraintRight_toLeftOf="@id/a_language_deleteIB"
		android:layout_marginBottom="8dp"
		tool:text="Language"
		style="@style/TextAppearance.MaterialComponents.Body1"/>
	
	<ImageButton
		android:id="@+id/a_language_deleteIB"
		android:layout_width="40dp"
		android:layout_height="40dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintDimensionRatio="w,1:1"
		android:layout_margin="8dp"
		android:src="@drawable/ic_launcher_foreground"
		android:scaleType="fitCenter"
		android:contentDescription="@string/delete"/>
	
</androidx.constraintlayout.widget.ConstraintLayout>