<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tool="http://schemas.android.com/tools">
	
	<TextView
		android:id="@+id/menu_lang1TV"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/menu_dashTV"
		app:layout_constraintBottom_toTopOf="@id/menu_headBR"
		tool:text="CD"
		style="@style/TextAppearance.AppCompat.Headline"/>
	
	<TextView
		android:id="@+id/menu_dashTV"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toRightOf="@id/menu_lang1TV"
		app:layout_constraintRight_toLeftOf="@id/menu_lang2TV"
		app:layout_constraintBottom_toTopOf="@id/menu_headBR"
		android:text="@string/menu.langs_separator"
		style="@style/TextAppearance.AppCompat.Headline"/>
	
	<TextView
		android:id="@+id/menu_lang2TV"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toRightOf="@id/menu_dashTV"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toTopOf="@id/menu_headBR"
		tool:text="CD"
		style="@style/TextAppearance.AppCompat.Headline"/>
	
	<androidx.constraintlayout.widget.Barrier
		android:id="@+id/menu_headBR"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:barrierDirection="bottom"
		app:constraint_referenced_ids="menu_lang1TV, menu_lang2TV, menu_dashTV"/>
	
	<ImageButton
		android:id="@+id/menu_dictionariesIB"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/menu_headBR"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/menu_wordsIB"
		app:layout_constraintBottom_toTopOf="@id/menu_tablesIB"
		android:src="@drawable/ic_launcher_foreground"
		android:scaleType="fitCenter"
		android:contentDescription="@string/menu.dictionaries"/>
	
	<TextView
		android:id="@+id/menu_dictionariesTV"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintLeft_toLeftOf="@id/menu_dictionariesIB"
		app:layout_constraintRight_toRightOf="@id/menu_dictionariesIB"
		app:layout_constraintBottom_toBottomOf="@id/menu_dictionariesIB"
		style="@style/TextAppearance.AppCompat.Headline"
		android:padding="10dp"
		android:text="@string/menu.dictionaries"/>
	
	<ImageButton
		android:id="@+id/menu_wordsIB"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/menu_headBR"
		app:layout_constraintLeft_toRightOf="@id/menu_dictionariesIB"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toTopOf="@id/menu_trainingIB"
		android:src="@drawable/ic_launcher_foreground"
		android:scaleType="fitCenter"
		android:contentDescription="@string/menu.words"/>
	
	<TextView
		android:id="@+id/menu_wordsTV"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintLeft_toLeftOf="@id/menu_wordsIB"
		app:layout_constraintRight_toRightOf="@id/menu_wordsIB"
		app:layout_constraintBottom_toBottomOf="@id/menu_wordsIB"
		style="@style/TextAppearance.AppCompat.Headline"
		android:padding="10dp"
		android:text="@string/menu.words"/>
	
	<ImageButton
		android:id="@+id/menu_tablesIB"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/menu_dictionariesIB"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/menu_trainingIB"
		app:layout_constraintBottom_toBottomOf="parent"
		android:src="@drawable/ic_launcher_foreground"
		android:scaleType="fitCenter"
		android:contentDescription="@string/menu.tables"/>
	
	<TextView
		android:id="@+id/menu_tablesTV"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintLeft_toLeftOf="@id/menu_tablesIB"
		app:layout_constraintRight_toRightOf="@id/menu_tablesIB"
		app:layout_constraintBottom_toBottomOf="@id/menu_tablesIB"
		style="@style/TextAppearance.AppCompat.Headline"
		android:padding="10dp"
		android:text="@string/menu.tables"/>
	
	<ImageButton
		android:id="@+id/menu_trainingIB"
		android:layout_width="0dp"
		android:layout_height="0dp"
		app:layout_constraintTop_toBottomOf="@id/menu_wordsIB"
		app:layout_constraintLeft_toRightOf="@id/menu_tablesIB"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:src="@drawable/ic_launcher_foreground"
		android:scaleType="fitCenter"
		android:contentDescription="@string/menu.tables"/>
	
	<TextView
		android:id="@+id/menu_trainingTV"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintLeft_toLeftOf="@id/menu_trainingIB"
		app:layout_constraintRight_toRightOf="@id/menu_trainingIB"
		app:layout_constraintBottom_toBottomOf="@id/menu_trainingIB"
		style="@style/TextAppearance.AppCompat.Headline"
		android:padding="10dp"
		android:text="@string/menu.training"/>

</androidx.constraintlayout.widget.ConstraintLayout>