<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tool="http://schemas.android.com/tools">
	
	<CheckBox
		android:id="@+id/a_word_learned1CB"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>
	
	<TextView
		android:id="@+id/a_word_word1TV"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBaseline_toBaselineOf="@id/a_word_learned1CB"
		app:layout_constraintLeft_toRightOf="@id/a_word_learned1CB"
		tool:text="word"/>
	
	<TextView
		android:id="@+id/a_word_word2TV"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBaseline_toBaselineOf="@id/a_word_learned2CB"
		app:layout_constraintRight_toLeftOf="@id/a_word_learned2CB"
		tool:text="word"/>
	
	<CheckBox
		android:id="@+id/a_word_learned2CB"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toLeftOf="@id/a_word_deleteIB"/>
	
	<ImageButton
		android:id="@+id/a_word_deleteIB"
		android:layout_width="40dp"
		android:layout_height="40dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintDimensionRatio="w,1:1"
		android:layout_margin="8dp"
		android:src="@drawable/ic_launcher_foreground"
		android:scaleType="fitCenter"
		android:contentDescription="@string/delete"/>

</androidx.constraintlayout.widget.ConstraintLayout>